[color]
	ui = auto
        branch = auto
[alias]
	co = checkout
	ci = commit -a
        sts = status
        st = status -uno
	br = branch
        w = whatchanged
	lg = log --graph --pretty=format:'%Cgreen%h%Creset -%Creset %s%C(yellow)%d %Cblue(%aN, %cr)%Creset' --abbrev-commit --date=relative
        ref = log --all --graph --decorate --oneline --simplify-by-decoration
        tree = log --all --graph --decorate --oneline --simplify-by-decoration
        wd = diff --word-diff
        lp = log -p
	undo-commit = reset --soft HEAD^
[user]
	name = Lechee.Lai
	email = lecheel@gmail.com
[apply]
	whitespace = fix
    
[diff]
        color = auto
        rename = copy
#	external = gdiff_wrapper
            
[pager]
        color = true
        diff = 
                
[status]
	color = auto

[core]
excludesfile = /home/lecheel/.gitignore
	editor = /usr/bin/vim
#	autocrlf = true
[filter "indent"]
	clean = indent
    smudge = cat
[mergetool]
	keepBackup = true

[difftool]
#    prompt = true
[merge]
	tool = vimdiff

